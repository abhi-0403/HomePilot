<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light background -->
    <solid android:color="#F5F5F5"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/>

    <!-- Rounded corners -->
    <corners android:radius="10dp"/>

    <!-- Padding inside -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
</shape>
