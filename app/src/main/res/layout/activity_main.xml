<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3ECDC">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#5A8DEE"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HomePilot"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Home Automation"
            android:textSize="14sp"
            android:textColor="#EAF1FF"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- ================= CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ===== CONTROLS CARD ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnLight"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ’¡ Light OFF"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFB74D"/>

                <Button
                    android:id="@+id/btnFan"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸŒ€ Fan OFF"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4DB6AC"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnBuzzer"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸš¨ Panic Alarm OFF"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EF5350"
                    android:layout_marginTop="12dp"/>

                <!-- Secure Home Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_security_toggle">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”’ Secure Home"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSecurity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== ROOM STATUS ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="14dp"/>

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¡ Temperature"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- Â°C"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#5A8DEE"/>
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Humidity"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- %"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#26A69A"/>
            </LinearLayout>

            <!-- Motion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¶ Motion"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Motion"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#EF5350"/>
            </LinearLayout>

            <!-- Fire -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Fire Status"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtFire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safe"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"/>
            </LinearLayout>

            <!-- Gas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp"
                android:layout_marginBottom="14dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â›½ Gas Leakage"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Last Detected -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="18dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•’ Last Detected"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/txtLastMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motion: --"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtLastGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas: --"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtLastFire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fire: --"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ================= FOOTER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#5A8DEE"/>

</LinearLayout>
